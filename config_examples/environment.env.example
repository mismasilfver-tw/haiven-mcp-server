# Haiven MCP Server Configuration
# Copy this file to .env and update with your actual values

# Haiven API Configuration
HAIVEN_API_URL=https://haiven.your-company.com

# Authentication - Choose ONE of the following:

# Option 1: API Key Authentication (recommended for production)
HAIVEN_API_KEY=your_api_key_here

# Option 2: Session Cookie Authentication (for development)
# HAIVEN_SESSION_COOKIE=your_session_cookie_here

# Option 3: Disable Authentication (local development only)
# HAIVEN_DISABLE_AUTH=true

# Development URLs (examples)
# HAIVEN_API_URL=http://localhost:8080  # Local development
# HAIVEN_API_URL=https://staging.haiven.com  # Staging environment
# HAIVEN_API_URL=https://haiven.your-company.com  # Production
